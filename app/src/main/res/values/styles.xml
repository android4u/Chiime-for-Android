<resources>

    <style name="ChiimeTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ChiimeActionBar</item>
        <item name="actionBarStyle">@style/ChiimeActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/ChiimeActionButtonOverflow</item>
    </style>

    <style name="ChiimeActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/chiime_orange</item>
        <item name="background">@color/chiime_orange</item>
        <item name="android:titleTextStyle">@style/ChiimeActionBarTitleText</item>
        <item name="titleTextStyle">@style/ChiimeActionBarTitleText</item>
    </style>

    <style name="ChiimeActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChiimeActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChiimeActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="LogoFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ChiimeEditText">
        <item name="colorControlNormal">@color/clouds</item>
    </style>

    <style name="GreenButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/emerald</item>
    </style>

    <style name="WhiteButton">
        <item name="android:textColor">@color/asbestos</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomBarButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/asbestos</item>
    </style>

    <style name="NameLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/chiime_black</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UsernameLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/concrete</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TimeLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/concrete</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/chiime_black</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>